template
	.control(ref='_formGroup')
		label.checkbox
			input(type='checkbox', checked.bind='item', value.one-way='item', disabled.bind='disabled', class="${item === true ? 'active' : ''} ${required && !isValid ? 'has-text-danger' : ''} ${isOverrideInvalid ? 'has-text-danger': + ''}")
			|  ${label}
			span.sub-label(if.bind='secondaryLabel') ${secondaryLabel}
		p.help.is-danger(if.bind='required && !isValid') ${errorMsg}
		p.help.is-warning(if.bind='isWarning') ${warningMsg}